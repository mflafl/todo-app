<div class="panel panel-default">
    <div class="panel-heading">{{input class='form-control' type="text" value=model.title}}</div>
    <div class="panel-body">
        <div class="form-group">
            {{textarea class='form-control edit-body' value=model.body placeholder="empty"}}
            {{view "select"
                    optionLabelPath = "content.title"
                    optionValuePath = "content.id"
                   content=categories
                   prompt="Uncategorized"
                   selectionBinding=model.category
            }}
        </div>
        <div class="form-group">
            {{ log tags }}
            {{tags-input tagsTest=tags}}
        </div>
        <div class="form-group">
            <button class="btn btn-default" {{action 'doneEditing'}}>Save</button>
            <button class="btn btn-default" {{action 'cancelEditing'}}>Cancel</button>
        </div>
  </div>
</div>